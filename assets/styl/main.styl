img
	width 100%
	height auto
main
	background #fff
	position relative
	min-height 100%
	z-index 1

// Grid


.title
	position fixed
	top 10%
	left 0
	right 0

	h1, h2
		color: rgba(232,127,65, 0.7);
		text-align center

	h1
		font-size 6em
		font-weight 900
		color: rgba(255,255,255, 0.8);
		text-shadow: 1px 4px 0px #67A, 1px 2px 0px #953
		+below(600px)
			line-height 1.2
			font-size 4em
		
	h2
		color: #fff
		font-size 1.7em
		font-weight 600
		text-shadow: 2px 2px 0px #999
		+below(600px)
			padding 0 20px
			line-height 1.2

.sky-far, .sky-near
	position absolute
	margin auto
	left 0
	right 0
	top 0
	bottom 0
	height 100%
	width 100%

